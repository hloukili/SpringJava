<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--Bean Parent -->
    <bean id="parentTriangle" class="org.halim.javaExample.Triangle">
         <property name="points">
                 <list>
                     <ref bean="pointA"/>
                 </list>
         </property>
     </bean>

    <bean id="triangle1" class="org.halim.javaExample.Triangle" parent="parentTriangle">
        <property name="points">
            <!--Use merge for not overwrite old value   -->
            <list merge="true">
                <ref bean="pointB"/>
            </list>

        </property>

    </bean>

    <bean id="pointA" class="org.halim.javaExample.Point">
        <property name="x" value="0"/>
        <property name="y" value="0"/>
    </bean>

    <bean id="pointB" class="org.halim.javaExample.Point">
        <property name="x" value="-20"/>
        <property name="y" value="0"/>
    </bean>

    <bean id="pointC" class="org.halim.javaExample.Point">
        <property name="x" value="0"/>
        <property name="y" value="20"/>
    </bean>



</beans>