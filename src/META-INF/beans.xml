<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="triangle" class="org.halim.javaExample.Triangle">
       <!--  ref pour la reference d'un autre beans-->
        <property name="pointA" ref="zeroPoint"/>
        <property name="pointB">
            <bean class="org.halim.javaExample.Point">
                <property name="x" value="-20"/>
                <property name="y" value="0"/>
            </bean>
        </property>


        <property name="pointC">
            <bean class="org.halim.javaExample.Point">
                <property name="x" value="0"/>
                <property name="y" value="20"/>
            </bean>
        </property>
    </bean>

    <bean id="zeroPoint" class="org.halim.javaExample.Point">
        <property name="x" value="0"/>
        <property name="y" value="0"/>
    </bean>

<!-- Create an alias, it's better to use IDs in order for convention-->
    <alias name="triangle" alias="triangle-alias"/>



</beans>